{
  "name": "@nappycat/usm",
  "version": "1.2.0",
  "description": "Universal State Machine for JS/TS games, 3D, and interactive sites. Adapter-first (three.js, GSAP, input, time, audio, picking).",
  "license": "MIT",
  "author": "stan nesi (NAPPY CAT)",
  "repository": { "type": "git", "url": "https://github.com/nappycats/usm.git" },
  "homepage": "https://github.com/nappycats/usm#readme",
  "bugs": { "url": "https://github.com/nappycats/usm/issues" },
  "publishConfig": { "access": "public" },

  "type": "module",
  "main": "./dist/usm.cjs",
  "module": "./dist/usm.esm.js",
  "types": "./dist/usm.d.ts",
  "unpkg": "./dist/usm.global.js",
  "jsdelivr": "./dist/usm.global.js",

  "exports": {
    ".": {
      "types": "./dist/usm.d.ts",
      "import": "./dist/usm.esm.js",
      "require": "./dist/usm.cjs"
    },
    "./adapters/*": {
      "types": "./dist/adapters/*.d.ts",
      "import": "./dist/adapters/*.esm.js",
      "require": "./dist/adapters/*.cjs"
    },
    "./package.json": "./package.json"
  },

  "typesVersions": {
    "*": {
      "adapters/*": ["dist/adapters/*.d.ts"],
      "*": ["dist/*.d.ts"]
    }
  },

  "files": ["dist"],
  "sideEffects": false,

  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "echo \"(add eslint later)\"",
    "format": "echo \"(add prettier later)\"",
    "test": "echo \"(add vitest later)\"",
    "prepublishOnly": "npm run clean && npm run build"
  },

  "peerDependencies": {
    "three": ">=0.150.0",
    "gsap": ">=3.12.0"
  },
  "peerDependenciesMeta": {
    "three": { "optional": true },
    "gsap": { "optional": true }
  },

  "engines": { "node": ">=18" },

  "devDependencies": {
    "typescript": "^5.5.0",
    "tsup": "^8.0.0",
    "rimraf": "^6.0.0"
  }
}
